<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    


    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
    
    

    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="../css/userdashboard.css">
    <title>Document</title>
</head>

<body>
    

    <section class="user-controls">
        <div class="user-controls-container">
            <div class="profile-cred">
                <img src="/images/user.png" alt="">
                <p><%= email %></p>
            </div>
            
            <a type="button" class="btn btn-light btn-lg btn-1" href="/"><i class="fa-solid fa-house"></i></a>
            <button type="button" class="btn btn-light btn-lg btn-1"><i class="fa-solid fa-gear"></i></button>
            <button type="button" class="btn btn-light btn-lg btn-1"><i class="fa-solid fa-trash"></i></button>

            <form action="/signout" method="post">
                <button type="submit" class="btn btn-dark btn-lg">SIGN OUT <i class="fa-solid fa-right-from-bracket"></i></button>
            </form>
        </div>
    </section>





    <section class="list">
        <div class="list-container">
            
            <div class="blog-list">

                <div class="list-header">
                    <h3>All (<%= blogs.length %>)</h3>
                    <% if(prot!='admin'){ %>
                        <a href="/compose" type="button" class="btn btn-dark btn-lg btn-add"><i class="fa-solid fa-plus"></i></a>
                    <% } %>
                    </div>
                

                <% for(let i=0;i<blogs.length;i++){ %>
                
                    <div class="list-item">
                        <h1><%= blogs[i].title[0] %></h1>
                        <div class="blog-info">
                            <ul class="ul-info">
                                <li><i class="fa-solid fa-heading"></i><%= blogs[i].title %></li>
                                <li><i class="fa-solid fa-caret-right"></i><%= blogs[i].category %></li>
                                <li><i class="fa-solid fa-calendar"></i><%= blogs[i].date %></li>
                                <li><i class="fa-solid fa-up-long"></i><%= blogs[i].likes %></li>
                                <li><i class="fa-solid fa-down-long"></i><%= blogs[i].downvotes %></li>
                                <li><i style="font-size: 8px;" class="fa-solid fa-comment"></i><%= blogs[i].comments %></li>
                            </ul>

                            <ul class="ul-controls">

                                <li>                                
                                    <i class="fa-solid fa-eye"></i>
                                    <a href="/blog/<%= blogs[i].bid %>">VIEW</a>
                                </li>
                                
                                <% if(prot!='admin'){ %>

                                    <li class="btn-blog-edit">
                                        <i class="fa-solid fa-pen-to-square"></i>
                                        <a href="/blog-edit/<%= blogs[i].bid %>">EDIT</a>
                                    </li>
                                <% } %>
                            
                                <li class="btn-blog-delete">
                                    <i class="fa-solid fa-trash"></i>
                                    <form action="/blog-delete/<%= blogs[i].bid %>" method="post">
                                        <button type="submit">DELETE</button>
                                    </form>
                                </li>
                                
                            
                            </ul>
                        </div>
                    </div>

                <% } %>
                
                
                

                
            </div>
        </div>
    </section>


    
    <script src="https://kit.fontawesome.com/9c1c3f6a2e.js" crossorigin="anonymous"></script>
</body>
</html>